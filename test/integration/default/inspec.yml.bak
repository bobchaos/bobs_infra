# Since all assets are created with dynamic names, we use inspec inputs
# to have kitchen-tf report the names to inspec
name: bobs_tf_main
title: bobs_tf
version: 0.1.0

attributes:
  - name: main_vpc_id
    type: string
    required: true
    description: ID of the main VPC, fetched from module outputs

  - name: static_assets_bucket_id
    type: string
    required: true
    description: ID of the statics assets S3 bucket

  - name: bastion_sg_id
    type: string
    required: true
    description: ID of the bastion's security group

  - name: bastion_asg_name
    type: string
    required: true
    description: Name of the bastions ASG

  - name: bastion_iam_policy_name
    type: string
    required: true
    description: ID of the bastion's IAM policy, fetched from module output

  - name: bastion_iam_role_name
    type: string
    required: true
    description: Name of the bastion's IAM role/profile

  - name: bastion_eip_id
    type: string
    required: true
    description: ID of the bastion's Elastic IP

  - name: main_alb_sg_id
    type: string
    required: true
    description: ID of the main load balancer security group

  - name: main_alb_id
    type: string
    required: true
    description: ID of the main load balancer

  - name: main_postgres_sg_id
    type: string
    required: true
    description: ID of the main postgres DB security group

  - name: main_postgres_id
    type: string
    required: true
    description: ID of the main postgres DB

  - name: goiardi_sg_id
    type: string
    required: true
    description: ID of goiardi security group

  - name: goiardi_extra_iam_policy_name
    type: string
    required: true
    description: ID of the additional goiardi IAM policy, the one explicitely defined in main.tf

  - name: goiardi_iam_policy_name
    type: string
    required: true
    description: ID of the goiardi IAM policy generated by the self-healer module

  - name: goiardi_iam_role_name
    type: string
    required: true
    description: ID of the goiardi IAM role/profile to which the policies are attached

  - name: goiardi_asg_id
    type: string
    required: true
    description: ID of goiardi auto scaling group, fetched from module output
